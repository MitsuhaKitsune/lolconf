@import 'nib'
@import 'includes/colors'
@import 'includes/modal'
@import 'includes/fonts'
@import 'includes/button'
@import 'includes/tab'
@import 'includes/nav'
@import 'partials/gameConfig'

html *
  cursor default
  user-select none

body
  font-family "Cabin"
  background url("images/FoundryOptions_I13.png") #2C2E2C
  color midnight-blue
  margin 0

.main-title
  height 40px
  padding 12px 0 15px 0
  text-align center
  font-size 32px
  color #FDF59C
  text-shadow 0 0 10px rgba(0, 0, 0, 0.5)
  position absolute
  top 0
  left 0
  width 100%

.main-container 
  position absolute
  right 0
  top 0
  width 80%

  &.ng-enter
    padding-top 35px
    transition 0.2s all
    opacity 0
    &.ng-enter-active
      padding-top 0
      opacity 1
