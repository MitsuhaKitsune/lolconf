@import 'nib'
@import 'includes/colors'
@import 'includes/modal'
@import 'includes/fonts'
@import 'includes/button'

body
  font-family "Source Sans"
  background clouds
  color midnight-blue
  margin 0

.nav-menu, .main-container
  display inline-block

.nav-menu
  width 15%
  position fixed
  top 0
  left 0
  background-color peter-river
  height 100%
  ul
    list-style none
    margin 0
    padding 0
    li
      a
        padding 0.5em 1em
        display block
        color white
        text-decoration none
        transition background-color .35s
        text-shadow 0 1px midnight-blue
        &:hover
          background-color belize-hole

.main-container 
  position absolute
  right 0
  top 0
  width 85%
