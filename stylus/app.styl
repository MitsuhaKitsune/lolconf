@import 'nib'

@import 'includes/colors'
@import 'includes/sprite'
@import 'includes/modal'
@import 'includes/fonts'
@import 'includes/button'
@import 'includes/tab'
@import 'includes/navigation'

@import 'partials/gameConfig'


html *
  cursor default
  user-select none

body
  font-family "Cabin"
  background url("images/FoundryOptions_I13.png") #2C2E2C
  color midnight-blue
  margin 0

.main-title
  height 40px
  padding 12px 0 15px 70px
  text-align center
  font-size 32px
  color #FDF59C
  text-shadow 0 0 10px rgba(0, 0, 0, 0.5)
  position absolute
  top 0
  right 70px
  left 0  
  -webkit-app-region drag

.main-close
  position absolute
  right 20px
  top 12px  
  height 47px
  width 47px
  sprite('I6', 99, 97)
  &:hover
    sprite('I6', 146, 97)
  &:active
    sprite('I6', 52, 97)

.main-container 
  position absolute
  left 242px
  top 148px
  right 22px
  bottom 66px
  overflow-y auto  
  padding 8px 35px 0 28px  

  &.ng-enter
    transition 0.2s all
    opacity 0
    &.ng-enter-active
      padding-top 0
      opacity 1
