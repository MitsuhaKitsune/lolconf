@import 'nib'

.modal-overlay
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  z-index 2000
  visibility hidden
  opacity 0
  background rgba(0, 0, 0, 0.2)
  .modal-active &
    visibility visible
    opacity 1  

.modal-content
  position absolute
  width 300px
  height 150px
  left 50%
  top 50%
  margin -150px 0 0 -150px
  visibility hidden
  opacity 0
  z-index 2001
  padding 20px

  background white
  box-shadow 0px 0px 20px rgba(0, 0, 0, 0.6)
  border-radius 3px

  transform scale(0.5)
  transform-origin 50% 50%
  transition 0.3s all cubic-bezier(0.250, 0.460, 0.450, 0.940)

.modal-active
  .main-container
    -webkit-filter blur(2px)

  .modal-content
    visibility visible
    opacity 1
    transform scale(1)

