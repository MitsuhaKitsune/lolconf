config-editor-half-width()
  width 410px
  vertical-align top

.config-editor-container
  display inline-block

.config-editor-label
  font-weight bold

.config-editor-range
  display block
  width 800px
  height 78px
  padding-left 5px
  .range-number
    font-weight bold
    float right
    margin-right 60px
  .range-slider
    input[type='range']
      -webkit-appearance none
      width 746px
      height 42px
      sprite('I6', 8, 793)
      background-color transparent
      &::-webkit-slider-thumb
        -webkit-appearance none
        width 62px
        height 46px
        sprite('I1', 124, 781)
        &:hover
          sprite('I1', 62, 781)
        &:active
          sprite('I1', 186, 781)

.config-editor-volume
  .config-editor-range
    .range-number
      margin-right 16px
  .volume-mute
    display inline-block
    sprite('I6', 0, 875)
    width 38px
    height 39px
    float right
    margin 20px 8px 0 0
    &:hover
      sprite('I6', 78, 875)
    &:active
      sprite('I6', 117, 875)
    &.muted
      sprite('I6', 195, 875)
      &:hover
        sprite('I6', 0, 914)
      &:active
        sprite('I6', 39, 875)

.config-editor-toggle
  config-editor-half-width()
  .toggle-label
    display inline-block
    vertical-align middle
  .toggle-checkbox
    display inline-block
    vertical-align middle
    width 40px
    height 40px
    sprite('I6', 80, 835)
    &:hover, &:active
      sprite('I6', 120, 835)
    &.checked
      sprite('I6', 0, 835)

.config-editor-resolution
  config-editor-half-width()
  select
    -webkit-appearance none
    width 250px
    height 43px
    background-color transparent
    border 0
    color clouds
    padding-left 30px
    sprite('I6', 0, 665)
    &:hover
      sprite('I6', 0, 579)
    &:active
      sprite('I6', 0, 622)
    &:focus
      outline 0
      sprite('I6', 0, 622)

.config-editor-rank
  config-editor-half-width()
  ul
    list-style none
    padding 0
    margin 0    
    &:before, &:after
      display inline-block
      content ''
      vertical-align bottom
      width 35px
      height 43px
      background-image url('images/config_editor_rank_edge_normal.png')
      transition 0.3s all
    &:after
      transform scaleX(-1)
    &:hover
      &:before, &:after
        background-image url('images/config_editor_rank_edge_hover.png')
    &:active
      &:before, &:after
        background-image url('images/config_editor_rank_edge_active.png')
    li
      display inline-block
      padding 0 5px
      background-image url('images/config_editor_rank_bg_normal.png')  
      height 43px
      line-height 43px
      text-transform uppercase
      font-size 12px
      color options-blue-green
      vertical-align middle
      transition 0.3s all
      &:hover, &:active, &.selected
        letter-spacing 0.5px
        font-weight bold
        color clouds
      &:hover, &.selected
        background-image url('images/config_editor_rank_bg_hover.png')
      &:active
        background-image url('images/config_editor_rank_bg_active.png')
