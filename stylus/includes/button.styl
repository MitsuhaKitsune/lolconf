button-bg = blue

button, a.button
  text-decoration none
  box-sizing border-box
  margin 0
  padding 0.2em 1em
  color base3
  text-shadow 0 1px base03
  background-color button-bg
  box-shadow inset 0 1px darken(button-bg, 20%)
  border 1px solid darken(button-bg, 50%)
  border-radius 3px
  &:hover
    background-color lighten(button-bg, 20%)
  &:active
    background-color darken(button-bg, 10%)
    box-shadow inset 0 1px darken(button-bg, 50%)
  &:disabled
    opacity 0.3
