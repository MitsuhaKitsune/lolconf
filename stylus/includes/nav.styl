.nav-menu, .main-container
  display inline-block

.nav-menu
  width 20%
  position fixed
  top 0
  left 0
  background-color peter-river
  height 100%
  ul
    list-style none
    margin 0
    padding 0
    li
      a
        font-size 20px
        padding 0.5em 1em
        display block
        color white
        text-decoration none
        transition background-color .35s
        text-shadow 0 1px midnight-blue
        &:hover
          background-color belize-hole
          