div.game-config(ng-controller='GameConfigCtrl')
  .tabs
    ul
      li(ng-repeat='(section, _) in settings.sections')
        span(ng-click='settings.current=section') {{section}}

  ul
    li(ng-repeat='setting in settings.sections[settings.current]')
      span.label {{setting.label}}
      span.item(lc-config-editor='setting')
        
